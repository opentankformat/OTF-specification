<?xml version="1.0" encoding="utf-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema" >
  <xs:include schemaLocation="Common_Attachments.xsd"/>  
  <xs:include schemaLocation="Common_Code.xsd"/>  
  <xs:include schemaLocation="Common_ComplexCodes.xsd"/>  
  <xs:include schemaLocation="Container_Work_EstimateLineProposal.xsd"/>  
  <xs:include schemaLocation="Container_ServiceProgress_AuthorizationInfo.xsd"/>
  <xs:complexType name="Container_Work_EstimateLines">
    <xs:sequence>
      <xs:element name="Container_Work_EstimateLine" maxOccurs="unbounded">
        <xs:complexType>
          <xs:sequence>
			<xs:element name="LineID" type="xs:string"   />
			<xs:element name="OriginID" type="xs:string"   />
			<xs:element name="SortOrder" type="xs:int"  />
			<xs:element name="Description" type="xs:string" />
			<xs:element name="CategoryCode"  >
				<xs:complexType> 
					<xs:sequence>
						<xs:element ref="Code"/>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
			<xs:element name="GeneralCodes"  >
				<xs:complexType>
					<xs:sequence>
						<xs:element name="LocationCode"  >
							<xs:complexType>
								<xs:sequence>
									<xs:element ref="Code"/>
								</xs:sequence>
							</xs:complexType>
						</xs:element>
						<xs:element name="DamageCode"   >
							<xs:complexType>
								<xs:sequence>
									<xs:element ref="Code"/>
								</xs:sequence>
							</xs:complexType>
						</xs:element>
						<xs:element name="RepairCode"  >
							<xs:complexType>
								<xs:sequence>
									<xs:element ref="Code"/>
								</xs:sequence>
							</xs:complexType>
						</xs:element>
						<xs:element name="ComponentCode"  >
							<xs:complexType>
								<xs:sequence>
									<xs:element ref="Code"/>
								</xs:sequence>
							</xs:complexType>
						</xs:element>
					</xs:sequence>
				</xs:complexType>
			</xs:element>								
			<xs:element name="ComplexCodes" type="ComplexCodes"   />
			<xs:element name="Proposal"  >
				<xs:complexType>
					<xs:sequence>
						<xs:element ref="Container_Work_EstimateLineProposal"/>					
					</xs:sequence>
				</xs:complexType>
			</xs:element>			
			<xs:element name="CounterProposal"  >
				<xs:complexType>
					<xs:sequence>
						<xs:element ref="Container_Work_EstimateLineProposal"/>					
					</xs:sequence>
				</xs:complexType>
			</xs:element>					
			<xs:element name="ClientAuthorization"  >
				<xs:complexType>
					<xs:sequence>
						<xs:element ref="Container_ServiceProgress_AuthorizationInfo"/>					
					</xs:sequence>
				</xs:complexType>
			</xs:element>	
			<xs:element name="Attachments" type="Attachments"  />		          
		  </xs:sequence>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>
</xs:schema>




